{
  "builds": [
    {
      "src": "src/**",
      "use": "@vercel/static"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "^/static/(.*)", "dest": "/src/static/$1" },
    { "src": ".*", "dest": "/src/index.html" }
  ]
}
